@model AplicacionWebMobileMetriks.Models.ViewModels.ContactoVistaModelo

@{
    ViewData["Title"] = "Crear Contacto";
}

<br />
<h2 class="text-info">Crear Contacto</h2>
<br />

<form method="post" asp-action="Crear">
    <div class="border fondoBlanco">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Contacto.Nombre" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Contacto.Nombre" class="form-control" />
            </div>
            <span asp-validation-for="Contacto.Nombre" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Contacto.Correo" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Contacto.Correo" class="form-control" />
            </div>
            <span asp-validation-for="Contacto.Correo" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Contacto.Telefono" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Contacto.Telefono" class="form-control" />
            </div>
            <span asp-validation-for="Contacto.Telefono" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Contacto.Extension" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Contacto.Extension" class="form-control" />
            </div>
            <span asp-validation-for="Contacto.Extension" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Contacto.Ubicacion" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Contacto.Ubicacion" class="form-control" />
            </div>
            <span asp-validation-for="Contacto.Ubicacion" class="text-danger"></span>
        </div>
        <div class="col-5 offset-2">
            <div class="row">
                <div class="col-6">
                    <input type="submit" class="btn btn-info form-control"  value="Crear" />
                </div>
                <div class="col-6">
                    <a asp-action="Index" asp-route-id="@Model.Receptores.IdReceptor"  class="btn btn-success form-control">Regresar a la lista</a>
                </div>
            </div>
        </div>
    </div>
</form>