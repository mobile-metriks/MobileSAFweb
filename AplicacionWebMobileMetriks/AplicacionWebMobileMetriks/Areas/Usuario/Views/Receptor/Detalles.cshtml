@model AplicacionWebMobileMetriks.Models.ViewModels.ReceptorVistaModelo
@{
    ViewData["Title"] = "Detalles";
}

<br />
<h2 class="text-info">Detalles Receptor</h2>
<br />
<form method="post" asp-action="Detalles">
    <div class="border fondoBlanco">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Receptores.Identificador" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Receptores.Identificador" readonly class="form-control" />
            </div>
            <span asp-validation-for="Receptores.Identificador" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Receptores.RFC" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Receptores.RFC" readonly class="form-control" />
            </div>
            <span asp-validation-for="Receptores.RFC" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Receptores.Cliente" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Receptores.Cliente" readonly class="form-control" />
            </div>
            <span asp-validation-for="Receptores.Cliente" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Receptores.Calle" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Receptores.Calle" readonly class="form-control" />
            </div>
            <span asp-validation-for="Receptores.Calle" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Receptores.CodigoPostal" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Receptores.CodigoPostal" readonly class="form-control" />
            </div>
            <span asp-validation-for="Receptores.CodigoPostal" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Receptores.C_Moneda" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="Receptores.C_Moneda" disabled asp-items="@(new SelectList(@ViewBag.listofitemsMoneda,"CMoneda","Descripcion"))" class="form-control" >
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Receptores.IdFormaPago" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="Receptores.IdFormaPago" disabled asp-items="@(new SelectList(@ViewBag.listofitemsFormaPago,"IdFormaPago","Descripcion"))" class="form-control">
                    <option>--Selecciona Uno</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Receptores.IdPais" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="Receptores.IdPais" disabled asp-items="@(new SelectList(@ViewBag.listofitemsPais,"IdPais","Descripcion"))" class="form-control">
                    <option>--Selecciona Uno</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Receptores.IdUsoCfdi" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="Receptores.IdUsoCfdi" disabled asp-items="@(new SelectList(@ViewBag.listofitemsUsoCfdi,"IdUsoCfdi","Descripcion"))" class="form-control">
                    <option>--Selecciona Uno</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Receptores.NumIdRegTrib" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Receptores.NumIdRegTrib" readonly class="form-control" />
            </div>
            <span asp-validation-for="Receptores.NumIdRegTrib" class="text-danger"></span>
        </div>
        <div class="col-7 offset-2">
            <div class="row">
                <div class="col-5">
                    <a asp-action="Index" class="btn btn-success form-control">Regresar a la lista</a>
                </div>
            </div>
        </div>
    </div>
</form>
