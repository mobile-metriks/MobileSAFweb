@model IEnumerable<Emisor>
    @{
        ViewData["Title"] = "Index";
    }

    <br /><br />
    <div class="border fondoBlanco">
        <div class="row">
            <div class="col-6">
                <h2 class="text-info">Emisores</h2>
            </div>
            <div class="col-6 text-right">
                @*Creo una vista parcial de el boton crear para reusar y lo llamo*@
                <partial name="_BotonCrearPartial" />
            </div>
        </div>
        <br />
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>@Html.DisplayNameFor(m => m.Empresa.Nombre)</th>
                    <th>@Html.DisplayNameFor(m => m.Empresa.RFC)</th>
                    <th>@Html.DisplayNameFor(m => m.Curp)</th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>@Html.DisplayFor(m => item.Empresa.Nombre)</td>
                <td>@Html.DisplayFor(m => item.Empresa.RFC)</td>
                <td>@Html.DisplayFor(m => item.Curp)</td>

                <partial name="_BotonesTablaPartial" model="item.Id" />

            </tr>
                }
            </table>
        }
        else
        {
            <p>Aun no existen emisores</p>
        }
    </div>
