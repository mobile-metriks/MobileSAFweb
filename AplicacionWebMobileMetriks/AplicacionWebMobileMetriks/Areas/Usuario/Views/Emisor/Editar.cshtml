
@model Emisor
@*Llamo a mis metodos extension*@
@using AplicacionWebMobileMetriks.MetodosExtendibles
@{
    ViewData["Title"] = "Editar";
}

<br />
<h2 class="text-info">Datos Generales</h2>
<br />

@*Usaremos un form para que aplique el metodo post y guarde los datos, utilizo enctype para que guarde la imagen*@
<form enctype="multipart/form-data" method="post" asp-action="Editar">
    <div class="border fondoBlanco row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="RFC" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="RFC" class="form-control" />
                </div>
                <span asp-validation-for="RFC" class="text-danger"></span>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Nombre" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" />
                </div>
                <span asp-validation-for="Nombre" class="text-danger"></span>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Imagen" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" multiple class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Curp" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Curp" class="form-control" />
                </div>
                <span asp-validation-for="Curp" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Calle" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Calle" class="form-control" />
                </div>
                <span asp-validation-for="Calle" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="NumExterior" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="NumExterior" class="form-control" />
                </div>
                <span asp-validation-for="NumExterior"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="NumInterior" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="NumInterior" class="form-control" />
                </div>
                <span asp-validation-for="NumInterior" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Colonia" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Colonia" class="form-control" />
                </div>
                <span asp-validation-for="Colonia" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Localidad" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Localidad" class="form-control" />
                </div>
                <span asp-validation-for="Localidad" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Referencia" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Referencia" class="form-control" />
                </div>
                <span asp-validation-for="Referencia" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Municipio" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Municipio" class="form-control" />
                </div>
                <span asp-validation-for="Municipio" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Estado" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Estado" class="form-control" />
                </div>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Pais" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Pais" class="form-control" />
                </div>
                <span asp-validation-for="Pais" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CodigoPostal" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CodigoPostal" class="form-control" />
                </div>
                <span asp-validation-for="CodigoPostal" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Correo" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Correo" class="form-control" />
                </div>
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Telefono" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Telefono" class="form-control" />
                </div>
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
        </div>
        <div class="col-3 offset-1">
            <img src="@Model.Imagen" width="100%" class="img-thumbnail" style="border-radius:5px; border: 1px solid #bbb9b9;" />
        </div>
        <div class="col-8">
            <div class="col-8 offset-4">
                @*Area de los botones de crear*@
                <partial name="_EditarRegresarBotonPartial" model="Model.Id" />
            </div>
        </div>
    </div>
</form>

