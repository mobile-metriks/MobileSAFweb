@model AplicacionWebMobileMetriks.Models.ViewModels.EmisorVistaModelo
@*Llamo a mis metodos extension*@
@using AplicacionWebMobileMetriks.MetodosExtendibles
@{
    ViewData["Title"] = "Editar";
}

<br />
<h2 class="text-info">Datos Generales</h2>
<br />

@*Usaremos un form para que aplique el metodo post y guarde los datos, utilizo enctype para que guarde la imagen*@
<form enctype="multipart/form-data" method="post" asp-action="Editar">
    <div class="border fondoBlanco row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="RegimenEmisor.RegimenFiscalId" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <select asp-for="RegimenEmisor.RegimenFiscalId" asp-items="@(new SelectList(@ViewBag.listofitems,"IdRegimenFiscal","Descripcion"))" class="form-control">
                        <option>--Select--</option>
                    </select>
                </div>
                <span asp-validation-for="RegimenEmisor.RegimenFiscalId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Emisor.RFC" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Emisor.RFC" class="form-control" />
                </div>
                <span asp-validation-for="Emisor.RFC" class="text-danger"></span>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Emisor.Nombre" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Emisor.Nombre" class="form-control" />
                </div>
                <span asp-validation-for="Emisor.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Emisor.Imagen" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" multiple class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Emisor.Curp" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Emisor.Curp" class="form-control" />
                </div>
                <span asp-validation-for="Emisor.Curp" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Emisor.Calle" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Emisor.Calle" class="form-control" />
                </div>
                <span asp-validation-for="Emisor.Calle" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Emisor.NumExterior" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Emisor.NumExterior" class="form-control" />
                </div>
                <span asp-validation-for="Emisor.NumExterior"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Emisor.NumInterior" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Emisor.NumInterior" class="form-control" />
                </div>
                <span asp-validation-for="Emisor.NumInterior" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Emisor.Colonia" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Emisor.Colonia" class="form-control" />
                </div>
                <span asp-validation-for="Emisor.Colonia" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Emisor.Localidad" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Emisor.Localidad" class="form-control" />
                </div>
                <span asp-validation-for="Emisor.Localidad" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Emisor.Referencia" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Emisor.Referencia" class="form-control" />
                </div>
                <span asp-validation-for="Emisor.Referencia" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Emisor.Municipio" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Emisor.Municipio" class="form-control" />
                </div>
                <span asp-validation-for="Emisor.Municipio" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Emisor.Estado" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Emisor.Estado" class="form-control" />
                </div>
                <span asp-validation-for="Emisor.Estado" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Emisor.Pais" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Emisor.Pais" class="form-control" />
                </div>
                <span asp-validation-for="Emisor.Pais" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Emisor.CodigoPostal" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Emisor.CodigoPostal" class="form-control" />
                </div>
                <span asp-validation-for="Emisor.CodigoPostal" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Emisor.Correo" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Emisor.Correo" class="form-control" />
                </div>
                <span asp-validation-for="Emisor.Correo" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Emisor.Telefono" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Emisor.Telefono" class="form-control" />
                </div>
                <span asp-validation-for="Emisor.Telefono" class="text-danger"></span>
            </div>
        </div>
        <div class="col-3 offset-1">
            <img src="@Model.Emisor.Imagen" width="100%" class="img-thumbnail" style="border-radius:5px; border: 1px solid #bbb9b9;" />
        </div>
    </div>
    <div class="col-8">
        <div class="col-8 offset-4">
            @*Area de los botones de crear*@
            <partial name="_EditarRegresarBotonPartial" model="Model.Emisor.Id" />
        </div>
    </div>
</form>

