@model IEnumerable<Empresa>
@{
    ViewData["Title"] = "Index";
}

<br /><br />
      <div class="border fondoBlanco">
          <div class="row">
              <div class="col-6">
                  <h2 class="text-info">Lista de empresas</h2>
              </div>
              <div class="col-6 text-right">
                 @*Creo una vista parcial de el boton crear para reusar y lo llamo*@
                  <partial name="_BotonCrearPartial" />
              </div>
          </div>
          <br />
          @if (Model.Count() > 0)
          {
              <table class="table table-striped border">
                  <tr class="table-secondary">
                      <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                      <th>@Html.DisplayNameFor(m => m.RFC)</th>
                      <th></th>
                  </tr>
                  @foreach (var item in Model)
                  {
                      <tr>
                          <td>@Html.DisplayFor(m => item.Nombre)</td>
                          <td>@Html.DisplayFor(m => item.RFC)</td>
                          <partial name="_BotonesTablaPartial" model="item.Id" />
                         
                      </tr>
                  }
              </table>
          }
          else
          {
              <p>Aun no existen empresas</p>
          }
      </div>