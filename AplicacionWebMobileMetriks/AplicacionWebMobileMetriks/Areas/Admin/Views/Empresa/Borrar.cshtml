@model Empresa
@{
    ViewData["Title"] = "Borrar";
}

    <br />
    <br />
    <h4 class="text-info">Borrar Empresa</h4>
    <form asp-action="Borrar" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="border fondoBlanco">
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Nombre" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Nombre" readonly class="form-control" />
                </div>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="RFC" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="RFC" readonly class="form-control" />
                </div>
                <span asp-validation-for="RFC" class="text-danger"></span>
            </div>
            <div class="form-group row">
       <partial name="_BorrarRegresarBotonPartial" model="Model.Id" />
            </div>
        </div>
    </form>

