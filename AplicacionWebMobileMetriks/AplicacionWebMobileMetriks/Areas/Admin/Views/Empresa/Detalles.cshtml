@model Empresa
@{
    ViewData["Title"] = "Detalles";
}

    <br />
    <br />
    <h4 class="text-info">Detalles</h4>
    <div class="border fondoBlanco">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Nombre" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Nombre" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RFC" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="RFC" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Id" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Id" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group row">
            <partial name="_LinksDetallesPartial" model="@Model.Id" />
        </div>
    </div>

