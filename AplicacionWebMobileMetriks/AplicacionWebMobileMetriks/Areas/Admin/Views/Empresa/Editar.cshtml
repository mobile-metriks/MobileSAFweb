@model AplicacionWebMobileMetriks.Models.Empresa

@{
    ViewData["Title"] = "Editar";
}

<br />
<br />
<h4 class="text-info">Editar empresa</h4>
<form asp-action="Editar" method="post">
    <div class="border fondoBlanco" >
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Nombre" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Nombre" class="form-control" />
            </div>
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RFC" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="RFC" class="form-control" />
            </div>
            <span asp-validation-for="RFC" class="text-danger"></span>
        </div>
        <div class="form-group row">
           <partial name="_EditarRegresarBotonPartial" model="Model.Id"/>
        </div>

    </div>
</form>
